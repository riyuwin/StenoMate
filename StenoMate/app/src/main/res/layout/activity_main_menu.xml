<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <!-- Background Image (full screen, at bottom layer)
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/menu_bg1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" /> -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/steno_bg_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_top_rect_shape"
            android:orientation="vertical"
            android:padding="20dp">

            <AutoCompleteTextView
                android:id="@+id/searchEditTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_search_bar_shape"
                android:fontFamily="@font/kanit_light"
                android:gravity="center"
                android:hint="🔍 Search"
                android:padding="5dp"
                android:inputType="text"
                android:completionThreshold="1"
                android:dropDownHeight="wrap_content"
                />

        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_top_rect_shape"
            android:orientation="vertical"
            android:padding="5dp">

            <!--<ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/logo_landscape_1" />-->

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="50dp">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:padding="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/logo_landscape_2" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:fillViewport="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:gravity="center">

                            <!-- Learning Materials -->
                            <LinearLayout
                                android:id="@+id/learningMaterialsId"
                                android:layout_width="300dp"
                                android:layout_height="270dp"
                                android:layout_marginLeft="80dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="40dp"
                                android:layout_marginRight="40dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:elevation="10dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/learning_materials_element1" />

                            </LinearLayout>

                            <!-- Dictionary -->
                            <LinearLayout
                                android:id="@+id/dictionaryId"
                                android:layout_width="300dp"
                                android:layout_height="270dp"
                                android:layout_marginEnd="40dp"
                                android:layout_marginRight="40dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:elevation="10dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/steno_translation_element2" />

                            </LinearLayout>

                            <!-- Quiz -->
                            <LinearLayout
                                android:id="@+id/quizId"
                                android:layout_width="300dp"
                                android:layout_height="270dp"
                                android:layout_marginEnd="40dp"
                                android:layout_marginRight="40dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:elevation="10dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/quizzes_elements_1" />

                            </LinearLayout>

                            <!-- Assessments -->
                            <LinearLayout
                                android:id="@+id/assessmentsId"
                                android:layout_width="300dp"
                                android:layout_height="270dp"
                                android:layout_marginEnd="40dp"
                                android:layout_marginRight="40dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:elevation="10dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/assessments_element1" />

                            </LinearLayout>

                            <!-- Dictation -->
                            <LinearLayout
                                android:id="@+id/dictationId"
                                android:layout_width="300dp"
                                android:layout_height="270dp"
                                android:layout_marginEnd="40dp"
                                android:layout_marginRight="40dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:elevation="10dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/dictation_element1" />

                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>


                <LinearLayout
                    android:id="@+id/aboutUsId"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="80dp"
                    android:orientation="vertical"
                    android:background="@drawable/about_us">

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
